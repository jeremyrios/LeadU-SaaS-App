<%= render("static_pages/navigation.html.haml") %>
<div class="container">
<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<br>

<div class="row">
  <div class="span4 offset2">
<%= form_tag( {:controller => :users, :action => :follow_code}, {:method => :post} ) do %>
    <%= label_tag "Please Enter the code your professor gave you" %>
    <%= text_field_tag :code_string, params[:code_string] %>
	<%= submit_tag("Submit") %>
<% end %>
	</div>
</div>
