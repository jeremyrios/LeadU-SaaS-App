<%= render("static_pages/navigation.html.haml") %>
<div class="container">
<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<br>

<div class="row">
  <div class="span8 offset2">
<% if current_user.code != nil %>
  Current code to give to students: <%= current_user.code %>
<% else %>

<%= simple_form_for @user do |f| %>
  <%= f.input :code, :label => 'Please create a code to give to students' %>
  <%= f.button :submit, 'Create Code'%>
<% end %>

<% end %>
<br>
<br>
<table class="table table-striped table-bordered">
  
  <thead>Students</thead>
  <% if @followers != nil%>
    <tr>
    <td>Name</td>
    <td>Personality Type</td>
    <td>Email</td>
  </tr>
  <% @followers.each do |f| %>
  <tr>
    <td><%= f.first_name %> <%= f.last_name %></td>
    <td><%= if f.survey then f.survey.personality_type else "None" end %></td>  
    <td><%= f.email %></td>
  </tr>
  <% end %>
  <% end %>
</table>
</div>
</div>
</div>
