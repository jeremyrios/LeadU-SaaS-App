:css
  .recentcomments a{display:inline !important;padding:0 !important;margin:0 !important;}%script{:src => "assets/js/jquery.anythingslider.js", :type => "text/javascript"}
%script{:src => "assets/js/jquery.anythingslider.fx.js", :type => "text/javascript"}
%link{:href => "assets/css/anythingslider.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
:css
    div.anythingSlider { height: 390px; }
    .nextButton, .prevButton { height: 415px; }
    div.anythingSlider .thumbNav { top: 380px; }
    .elastic-wrap { padding-bottom: 400px; }
      .item_5 { background-image: url("assets/background_website.jpg"); }
    :javascript
  jQuery(document).ready(function($){
    var thumbs=[];
		thumbs[5] = '';

	    $('#slider').anythingSlider({
		height		: '415',
		expand		: true,
		autoPlay	: true,
		resizeContents  : true,
		pauseOnHover    : true,
		buildArrows     : false,
		autoPlayLocked  : false,
		delay		: 5000,
		resumeDelay	: 15000,
		animationTime	: 0,
		delayBeforeAnimate:0,
		navigationFormatter : function(i, panel){
		    return thumbs[i];
		}
	    }).anythingSliderFx({
		'.slider-caption-5' : [ 'caption-Top', '300px', '400', 'linear' ]

, '.panel' : [ 'fade', 2000, 'swing' ]
	    });
	    $('#slider-wrapper').hover(function() {
		$(".slideforward").stop(true, true).fadeIn();
		$(".slidebackward").stop(true, true).fadeIn();
		$(".thumbNav").stop(true, true).fadeIn();
	    }, function() {
		$(".slideforward").fadeOut();
		$(".slidebackward").fadeOut();
		$(".thumbNav").fadeOut();
	    });
	    $(".pauseButton").toggle(function(){
		$(this).attr("class", "playButton");
		$('#slider').data('AnythingSlider').startStop(false); // stops the slideshow
	    },function(){
		$(this).attr("class", "pauseButton");
		$('#slider').data('AnythingSlider').startStop(true);  // start the slideshow
	    });
	    $(".slideforward").click(function(){
		$('#slider').data('AnythingSlider').goForward();
	    });
	    $(".slidebackward").click(function(){
		$('#slider').data('AnythingSlider').goBack();
	    });
	});
